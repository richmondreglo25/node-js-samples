{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "ts/src",
    "baseUrl": "ts/src",
    "paths": {
      "@app/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["ts/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
